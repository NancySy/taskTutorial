{
  "env": {
  "browser": true,
  "jest": true
},
  "settings": {
    "polyfills": ["fetch"]
  },
  "extends": [
    "airbnb",
    "plugin:flowtype/recommended"
  ],
  "plugins": [
    "flowtype",
    "compat"
  ],
  "rules":{
    "semi": [2, "never"],
    "no-unexpected-multiline": 2,
    "linebreak-style": ["error", process.env.NODE_ENV === 'prod' ? "unix" : "windows"],
    "compat/compat": 2
  }
}
